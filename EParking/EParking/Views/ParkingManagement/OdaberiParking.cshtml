@model IEnumerable<EParking.Models.Parking>

@{
    ViewData["Title"] = "OdaberiParking";
}


<h1>Izaberite vaš parking</h1>

<table style="margin-top:50px"class="table">
    <thead>
        <tr>
            <th>
                <b style="font-size:18px">@Html.DisplayNameFor(model => model.Naziv)</b>
            </th>
 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b style="font-size:16px">@Html.DisplayFor(modelItem => item.Naziv)</b>
</td>
                <td>
                    <a asp-action="UnesiSifru" asp-route-id="@item.ID">Odaberi</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
